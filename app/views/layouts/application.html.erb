<!DOCTYPE html>
<html>
  <head>
    <title>FanSports</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">

      <% if logged_in? %>
        <%= link_to "Home", teams_path, class: "home-link" %>
        <ul class="admin-links">
          <li><%= link_to "Create Team", new_team_path %></li>
          <li><%= link_to "Create Player", new_player_path %></li>
          <li><%= link_to "Sign Free Agent", player_freeagents_path %></li>
        </ul>
         <%= link_to "logout", session_path(session[:account_id]), :method => :delete %>
      <% else %>
        <%= link_to "sign up", new_account_path, :method => :get %>
        <%= link_to "sign in", new_session_path, :method => :get %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
